generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Origin {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  products  Product[]
}

model Taste {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  products  Product[]
}



model Category {
  id           Int       @id @default(autoincrement())
  categoryName String
  slug         String    @unique
  mainImage    String?
  products     Product[] // Relaci√≥n uno-a-muchos
}


model Product {
  id          Int      @id @default(autoincrement())
  productName String
  slug        String   @unique
  description String?
  images      String[] // Array de URLs
  active      Boolean  @default(true)
  price       Decimal  @db.Decimal(10, 2)
  isFeatured  Boolean  @default(false)
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  originId    Int
  origin      Origin   @relation(fields: [originId], references: [id])
  tasteId     Int
  taste       Taste    @relation(fields: [tasteId], references: [id])
  createdAt   DateTime @default(now())
}


model Order {
  id        Int      @id @default(autoincrement())
  stripeId  String
  products  Json
  createdAt DateTime @default(now())
}


model BannerMessage {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  link        String?
  active      Boolean @default(true)
}
